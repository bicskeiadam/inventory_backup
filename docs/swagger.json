{
  "openapi": "3.0.0",
  "info": {"title":"Leltar API","version":"1.0.0"},
  "paths": {
    "/api/login.php": {
      "post": {
        "summary":"Login",
        "requestBody":{"required":true,"content":{"application/json":{"schema":{"type":"object","properties":{"email":{"type":"string"},"password":{"type":"string"}}}}}},
        "responses":{"200":{"description":"OK"},"401":{"description":"Unauthorized"}}
      }
    },
    "/api/items.php": {
      "get": {"summary":"Get items by room","parameters":[{"name":"room_id","in":"query","required":true,"schema":{"type":"integer"}}],"responses":{"200":{"description":"OK"}}},
      "post": {"summary":"Create item","security":[{"bearerAuth":[]}],"requestBody":{"content":{"application/json":{"schema":{"type":"object","properties":{"room_id":{"type":"integer"},"name":{"type":"string"}}}}}},"responses":{"201":{"description":"Created"}}}
    }
  },
  "components": {
    "securitySchemes": {"bearerAuth":{"type":"http","scheme":"bearer","bearerFormat":"JWT"}}
  }
}
